<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_date_measure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ccqzy.activitys.DateMeasureActivity">

    <include
        android:id="@+id/title_date_measure"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/title_date_measure"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_automatic_measure"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@drawable/bg_selector_regist"
            android:text="@string/automatic_measure"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_manual_measure"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="60dp"
            android:padding="20dp"
            android:background="@drawable/bg_selector_regist"
            android:text="@string/manual_measure"
            android:textSize="40sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
