<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/rl_dat_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_excle"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/rl_up_down"
            android:layout_width="61dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_up"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:lines="1"
                android:text="↑"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:background="@drawable/bg_selector_updown"/>

            <View
                android:id="@+id/view_01"
                android:layout_width="0.5dp"
                android:layout_height="31dp"
                android:layout_toRightOf="@+id/tv_up"
                android:background="@color/hui" />

            <TextView
                android:id="@+id/tv_down"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/view_01"
                android:gravity="center"
                android:background="@drawable/bg_selector_updown"
                android:lines="1"
                android:text="↓"
                android:textColor="@color/green"
                android:textSize="20sp" />


            <View
                android:id="@+id/view_00"
                android:layout_width="0.5dp"
                android:layout_height="31dp"
               android:layout_alignParentRight="true"
                android:background="@color/hui"
                android:layout_marginLeft="0.5dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_btn_measure"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/rl_up_down"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="点序号"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_0"
            android:layout_width="0.5dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@+id/tv_btn_measure"
            android:background="@color/hui" />

        <TextView
            android:id="@+id/tv_point_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_0"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="点名"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_1"
            android:layout_width="0.5dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@+id/tv_point_name"
            android:background="@color/hui" />

        <TextView
            android:id="@+id/tv_pointX12"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_1"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text=""
            android:textSize="16sp" />

        <View
            android:id="@+id/view_2"
            android:layout_width="0.5dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@+id/tv_pointX12"
            android:background="@color/hui" />

        <TextView
            android:id="@+id/tv_pointY12"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view_2"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text=""
            android:textSize="16sp" />

        <View
            android:id="@+id/view_3"
            android:layout_width="0.5dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@+id/tv_pointY12"
            android:background="@color/hui" />

        <TextView
            android:id="@+id/tv_pointH12"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_3"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text=""
            android:textSize="16sp" />

        <View
            android:id="@+id/view_4"
            android:layout_width="0.5dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@+id/tv_pointH12"
            android:background="@color/hui" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_4"
            android:background="@drawable/bg_selector_rl"
            android:gravity="center"
            android:text="删除"
            android:textSize="16sp"
            android:visibility="gone"/>

    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_dat_info"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hui"/>


</RelativeLayout>
