<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_export"
            android:layout_toRightOf="@+id/tv_export_dat"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="文件名称"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_export_time"
            android:layout_toRightOf="@+id/tv_export_dat"
            android:layout_below="@+id/tv_export_dat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="创建时间"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_export_dat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_selector_rl"
            android:text="导出"/>


    </RelativeLayout>

</RelativeLayout>
