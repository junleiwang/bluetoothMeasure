                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bg_excle">

                <TextView
                    android:id="@+id/tv_btn_measure2"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:lines="1"
                    android:text="@string/measure"
                    android:background="@drawable/bg_selector_rl"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_02"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_btn_measure2"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_point_name2"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_02"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:lines="1"
                    android:text="挠度点"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_12"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_point_name2"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointX2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_12"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_22"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointX2"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointY2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_22"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:lines="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_32"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointY2"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointH2"
                    android:layout_width="100dp"
