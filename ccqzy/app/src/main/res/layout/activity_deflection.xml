                    android:layout_toRightOf="@+id/view_32"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_42"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointH2"
                    android:background="@color/hui"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_def3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bg_excle">

                <TextView
                    android:id="@+id/tv_btn_measure3"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:lines="1"
                    android:text="@string/measure"
                    android:background="@drawable/bg_selector_rl"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_03"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_btn_measure3"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_point_name3"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_03"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:lines="1"
                    android:text="point3"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_13"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_point_name3"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointX3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_13"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_23"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointX3"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointY3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_23"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:lines="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_33"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointY3"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointH3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_33"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_43"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointH3"
                    android:background="@color/hui"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hsv_three_point"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_measure_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_regist"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/measure_result"
            android:textColor="@color/black"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_deflection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挠度值;"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_result_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="24sp"/>

    </LinearLayout>



</RelativeLayout>
