            android:layout_height="200dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"

                android:background="@drawable/bg_excle">

                <TextView
                    android:id="@+id/tv_btn_measure"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:lines="1"
                    android:text="操作"
                    android:background="@drawable/bg_selector_rl"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_0"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_btn_measure"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_point_name"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_0"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:lines="1"
                    android:text="点名"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_1"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_point_name"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointX"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_1"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/pointX"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointX"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointY"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_2"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:lines="1"
                    android:gravity="center"
                    android:text="@string/pointY"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_3"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointY"
                    android:background="@color/hui" />

                <TextView
                    android:id="@+id/tv_pointH"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_3"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:text="@string/pointH"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_4"
                    android:layout_width="0.5dp"
                    android:layout_height="31dp"
                    android:layout_toRightOf="@+id/tv_pointH"
                    android:background="@color/hui"
                    android:visibility="gone"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_def1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bg_excle">

                <TextView
                    android:id="@+id/tv_btn_measure1"
                    android:layout_width="100dp"
                    android:gravity="center"
