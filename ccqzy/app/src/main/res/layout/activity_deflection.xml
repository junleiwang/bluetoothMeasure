                    android:layout_toRightOf="@+id/view_11"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0.0"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_21"
                    android:layout_width="0.5dp"
